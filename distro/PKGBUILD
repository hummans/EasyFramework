pkgver() {
  cd "EasyFramework"
  grep -Po 'version:[ \t]*'\''[^'\'']+'\' meson.build | sed -r -e 's/version:[ \t]*'\''([^'\'']+)'\''/\1/'
}

prepare() {
    cd EasyFramework
